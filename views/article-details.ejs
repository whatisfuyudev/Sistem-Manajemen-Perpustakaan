<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= article.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Quill Snow CSS -->
  <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet">
  <style>
    /* Make html/body fill the viewport */
    html, body {
      height: 100%;
      margin: 0;
    }
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0; padding: 0; background: #f8f9fa;
      color: #333;
      display: flex;
      flex-direction: column;
    }
    .wrapper {
      max-width: 800px;
      margin: auto; padding: 24px;
      margin-top: 92px;
      margin-bottom: 40px;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      flex: 1;
    }
    .cover {
      width: 100%; 
      max-height: 400px;
      border-radius: 6px;
      margin-bottom: 16px;
      object-fit: cover;
    }
    h1 {
      margin: 0 0 8px;
      font-size: 1.8rem;
    }
    .meta {
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 16px;
    }
    #editor {
      /* prevent user editing */
      border: none;
      height: fit-content;
    }
    @media (max-width: 600px) {
      .wrapper { padding: 20px; }
      h1 { font-size: 1.5rem; }
    }
    .ql-editor {
      padding: 0;
    }

    .ql-editor > h1 {
      font-size: 1.3rem;
    }

    .ql-editor > h2 {
      font-size: 1.2rem;
    }

    .ql-editor > h3 {
      font-size: 1.1rem;
    }

    footer > p {
      margin: 0;
    }
  </style>
  <link rel="stylesheet" href="/public/css/topNavBarStyle.css">
  <link rel="stylesheet" href="/public/css/footerStyle.css">
</head>
<body>
  <!-- Navigation Bar -->
  <nav>
    <div class="logo">
      <a href="/">Library</a>
    </div>

    <div class="dropdown" id="navDropdown">
      <button class="dropbtn" id="menuBtn">â˜° Menu</button>
      <div class="dropdown-content" id="dropdownContent">
        <a href="/">Home</a>
        <a href="/profile">Profile</a>
        <a href="/user/reservations">Reservations</a>
        <a href="/user/checkouts">Checkouts</a>
        <a href="/auth/login">Login</a>
        <a href="/auth/register">Register</a>
      </div>
    </div>
  </nav>

  <div class="wrapper">
    
    <img src="<%= article.coverImage ? article.coverImage : '/public/images/articles-pictures/default.png' %>" alt="Cover" class="cover">

    <div class="meta">
      <!-- Format date -->
      <%= article.createdAt.toLocaleDateString('en-US', {
         day:'numeric', month:'long', year:'numeric'
      }) %>
      &mdash;
      <%= article.readingTime
          ? article.readingTime + ' min read'
          : '' %>
    </div>

    <h1><%= article.title %></h1>

    <div class="meta">
      By <strong><%= article.authorName %></strong>
    </div>

    <!-- Quill editor container -->
    <!-- pass the JSON in a data attribute -->
    <div id="editor"
        data-body='<%- JSON.stringify(article.body) %>'>
    </div>
  </div>

   <!-- Footer -->
  <footer>
    <p>&copy; 2025 Library Management System. All rights reserved.</p>
  </footer>

  <!-- Quill JS -->
  <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
  <script src="/public/js/article-detailsScript.js"></script>
  <script src="/public/js/topNavBarScript.js"></script>
</body>
</html>
