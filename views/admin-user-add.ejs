<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add New User</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/public/css/admin-add-common.css">
  <style>
    #saveBtn {
      background: #28a745;
      color: #fff;
    }

    #cancelBtn {
      background: #dc3545;
      color: #fff;
    }

    #message {
      margin-top: 15px;
      text-align: center;
    }
  </style>
  <link rel="stylesheet" href="/public/css/loadingPopupStyle.css">
</head>
<body>
  <div class="container">
    <div class="back-button-container">
      <!-- change to proper endpoint -->
      <a href="/admin/panel?tab=users" class="back-button">Back</a>
    </div>

    <h1>Add New User</h1>
    <!-- Profile picture upload -->
    <div class="form-group">
      <label for="uploadedImage">Profile Picture</label>
      <input type="file" id="uploadedImage" name="uploadedImage" accept="image/*">
    </div>

    <form id="addUserForm" enctype="multipart/form-data">  

      <!-- Name -->
      <div class="form-group">
        <label for="name">Name *</label>
        <input type="text" id="name" name="name" required>
      </div>

      <!-- Email -->
      <div class="form-group">
        <label for="email">Email *</label>
        <input type="email" id="email" name="email" required>
      </div>

      <!-- Password -->
      <div class="form-group">
        <label for="password">Password *</label>
        <input type="password" id="password" name="password" required>
      </div>

      <!-- Role -->
      <div class="form-group">
        <label for="role">Role *</label>
        <select id="role" name="role" required>
          <option value="Patron">Patron</option>
          <option value="Librarian">Librarian</option>
        </select>
      </div>

      <!-- Account Status -->
      <div class="form-group">
        <label for="accountStatus">Account Status *</label>
        <select id="accountStatus" name="accountStatus" required>
          <option value="Active" selected>Active</option>
          <option value="Pending">Pending</option>
          <option value="Suspended">Suspended</option>
        </select>
      </div>

      <!-- Phone -->
      <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" id="phone" name="phone">
      </div>

      <!-- Address -->
      <div class="form-group">
        <label for="address">Address</label>
        <textarea id="address" name="address"></textarea>
      </div>

      <!-- Hidden field for profilePicture path -->
      <input type="hidden" id="profilePictureInput" name="profilePicture">

      <div class="buttons">
        <button type="button" id="cancelBtn">Cancel</button>
        <button type="button" id="saveBtn">Save</button>
      </div>

      <div id="message"></div>
    </form>
  </div>

  <!-- Loading Modal (no buttons) -->
  <div id="loading-overlay" class="modal-overlay hidden">
    <div class="modal">
      <div class="spinner"></div>
      <p id="loading-message" style="font-size:0.95rem; color:#333; margin:0;">
        Loadingâ€¦
      </p>
    </div>
  </div>
  
  <script src="/public/js/loadingPopup.js"></script>

  <script src="/public/js/admin-user-addScript.js">

  </script>
</body>
</html>
