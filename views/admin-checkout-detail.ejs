<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Checkout Detail</title>
  <style>
    :root {
      --primary-color: #007bff;
      --light-gray: #f5f5f5;
      --text-color: #333;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 20px;
      background: var(--light-gray);
      color: var(--text-color);
    }
    .container {
      max-width: 900px;
      margin: auto;
      background: #fff;
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.05);
    }
    .section {
      margin-bottom: 30px;
    }
    .section-title {
      font-size: 1.25rem;
      font-weight: 600;
      border-bottom: 1px solid #ddd;
      padding-bottom: 10px;
      margin-bottom: 20px;
    }
    .book-info, .user-info {
      display: flex;
      align-items: center;
      gap: 20px;
    }
    .book-cover {
      width: 100px;
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
    }
    .info-grid {
      display: grid;
      grid-template-columns: 150px 1fr;
      row-gap: 12px;
      column-gap: 20px;
    }
    .info-label {
      font-weight: 500;
      color: #555;
    }
    .info-value {
      font-weight: 400;
    }
    .user-avatar {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      object-fit: cover;
      background: #eee;
    }

    /* Button styles */
    .back-button-container {
    margin-bottom: 20px;
    }

    .back-button {
      background: #6c757d;
      padding: 10px 20px;
      border-radius: 4px;
      border: none;
      color: #fff;
      text-decoration: none;
      display: inline-block;
    }

    .back-button:hover {
      background-color: #5a6268;
      cursor: pointer;
    }

    /* Modal Popup */
    .modal-overlay {
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.5);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1000;
      padding: 20px;
    }

    .hidden {
      display: none;
    }

    .modal-overlay.hidden {
      display: none;
    }

    .modal {
      background: #fff;
      border-radius: 4px;
      max-width: 400px;
      width: 100%;
      padding: 20px;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    /* Message text */
    #modal-message {
      font-size: 16px;
      margin-bottom: 20px;
    }

    /* Form layout */
    #modal-return-form {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    /* Form groups */
    .form-group {
      display: flex;
      flex-direction: column;
    }

    .form-group label {
      margin-bottom: 6px;
      font-size: 0.875rem;
      font-weight: 600;
    }

    .form-group input,
    .form-group select {
      padding: 10px 12px;
      font-size: 0.95rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      outline: none;
      transition: border-color 0.2s ease;
    }

    .form-group input:focus,
    .form-group select:focus {
      border-color: #888;
    }

    /* Note text */
    .note {
      font-size: 0.75rem;
      color: #666;
      margin-top: 4px;
    }

    /* Hide custom-fine until needed */
    .custom-fine-group.hidden {
      display: none;
    }

    /* Buttons */
    .modal-buttons {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 16px;
    }

    .modal-buttons button {
      padding: 10px 20px;
      font-size: 14px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background 0.2s ease;
    }

    #modal-ok {
      background: #28a745;
      color: #fff;
    }

    #modal-cancel {
      background: #dc3545;
      color: #fff;
    }

    /* Responsive tweaks */
    @media (max-width: 360px) {
      .modal {
        padding: 16px;
      }
      .modal-buttons {
        flex-direction: column;
      }
    }

    /* error message on process checkout return pop up */
    .error-message {
      color: #dc3545;
      font-size: 0.85rem;
      margin-top: 4px;
      display: none;
    }
    .error-message.visible {
      display: block;
    }


  </style>
</head>
<body>
  <div class="container">
    <div class="back-button-container">
      <a href="/admin/panel?tab=checkouts" class="back-button">Back</a>
    </div>

    <!-- Book Details -->
    <% const bookExists = Boolean(book); %>
    <div class="section">
      <div class="section-title">Book Information</div>
      <div class="book-info">
        <img
          src="<%= bookExists && book.coverImage
                ? book.coverImage
                : '/public/images/book-covers/default-cover.jpg' %>"
          alt="Book Cover"
          class="book-cover"
        >
        <div class="info-grid" style="grid-template-columns: 50px 1fr;">
          <div class="info-label">Title:</div>
          <div class="info-value"><%= bookExists && book.title ? book.title : '–' %></div>

          <div class="info-label">Authors:</div>
          <div class="info-value">
            <%= bookExists && Array.isArray(book.authors) 
                  ? book.authors.join(', ') 
                  : '–' %>
          </div>

        </div>
      </div>
    </div>

    <!-- Checkout Information -->
    <div class="section">
      <div class="section-title">Checkout Details</div>
      <div class="info-grid">
        <div class="info-label">Checkout ID:</div>
        <div class="info-value"><%= checkout.id %></div>

        <div class="info-label">Checkout Date:</div>
        <div class="info-value"><%= new Date(checkout.checkoutDate).toLocaleDateString() %></div>

        <div class="info-label">Due Date:</div>
        <div class="info-value"><%= new Date(checkout.dueDate).toLocaleDateString() %></div>

        <div class="info-label">Return Date:</div>
        <div class="info-value">
          <% if (checkout.returnDate) { %>
            <%= new Date(checkout.returnDate).toLocaleDateString() %>
          <% } else { %>
            Not returned
          <% } %>
        </div>

        <div class="info-label">Status:</div>
        <div class="info-value"><%= checkout.status %></div>

        <div class="info-label">Renewal Count:</div>
        <div class="info-value"><%= checkout.renewalCount %></div>

        <div class="info-label">Renewal Requested:</div>
        <div class="info-value"><%= checkout.renewalRequested ? 'Yes' : 'No' %></div>

        <div class="info-label">Requested Renewal Days:</div>
        <div class="info-value"><%= checkout.requestedRenewalDays || '–' %></div>

        <div class="info-label">Fine:</div>
        <div class="info-value">$<%= checkout.fine %></div>

        <div class="info-label">Reservation ID:</div>
        <div class="info-value">
          <% if (checkout.reservationId) { %>
            <%= checkout.reservationId %>
          <% } else { %>
            – 
          <% } %>
        </div>
      </div>
    </div>


    <!-- User Information -->
    <div class="section">
      <div class="section-title">User Information</div>
      <% const userExists = Boolean(user); %>
      <div class="user-info">
        <img
          src="<%= userExists && user.profilePicture
                ? user.profilePicture
                : '/public/images/profile-pictures/default.jpg' %>"
          alt="User Profile"
          class="user-avatar"
        >
        <div class="info-grid" style="grid-template-columns: 50px 1fr;">
          <div class="info-label">Name:</div>
          <div class="info-value">
            <%= userExists ? user.name : '–' %>
          </div>

          <div class="info-label">Role:</div>
          <div class="info-value">
            <%= userExists && user.role ? user.role : '–' %>
          </div>

        </div>
      </div>
    </div>
    

    <!-- Action Buttons -->
    <div class="button-container" style="display: flex; justify-content: center; gap: 12px; margin-top: 30px;">
      <!-- only show Renew if status is exactly "active" -->
      <% if (checkout.status === 'active') { %>
        <button
          id="renew-button"
          class="back-button"
          style="background-color: var(--primary-color);"
        >
          Renew Checkout
        </button>
      <% } %>
      
      <!-- dynamically, server-side generated button -->
      <% if (checkout.status === 'active' || checkout.status === 'overdue') { %>
        <button
          id="process-button"
          class="back-button"
          style="background-color: #28a745;"
        >
          Process Checkout
        </button>
      <% } %>
      
      <button id="edit-button" class="back-button" style="background-color: #ffc107; color: #000;">
        Edit
      </button>
    </div>


  </div>  

  <!-- Modal Popup -->
  <div id="modal-overlay" class="modal-overlay hidden">
    <div class="modal">
      <p id="modal-message"></p>
      <div class="modal-buttons">
        <button id="modal-ok" type="button">OK</button>
        <button id="modal-cancel" class="hidden" type="button">Cancel</button>
      </div>
    </div>
  </div>

  <script src="/public/js/admin-checkout-detailScript.js">

  </script>
</body>
</html>
