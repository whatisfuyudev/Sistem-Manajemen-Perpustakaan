<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Checkout Detail</title>
  <style>
    :root {
      --primary-color: #007bff;
      --light-gray: #f5f5f5;
      --text-color: #333;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 20px;
      background: var(--light-gray);
      color: var(--text-color);
    }
    .container {
      max-width: 900px;
      margin: auto;
      background: #fff;
      border-radius: 12px;
      padding: 24px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.05);
    }
    .section {
      margin-bottom: 30px;
    }
    .section-title {
      font-size: 1.25rem;
      font-weight: 600;
      border-bottom: 1px solid #ddd;
      padding-bottom: 10px;
      margin-bottom: 20px;
    }
    .book-info, .user-info {
      display: flex;
      align-items: center;
      gap: 20px;
    }
    .book-cover {
      width: 100px;
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
    }
    .info-grid {
      display: grid;
      grid-template-columns: 150px 1fr;
      row-gap: 12px;
      column-gap: 20px;
    }
    .info-label {
      font-weight: 500;
      color: #555;
    }
    .info-value {
      font-weight: 400;
    }
    .user-avatar {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      object-fit: cover;
      background: #eee;
    }
    @media (max-width: 600px) {
      .book-info, .user-info {
        flex-direction: column;
        align-items: flex-start;
      }
      .info-grid {
        grid-template-columns: 1fr;
      }
      .book-cover, .user-avatar {
        width: 100%;
        height: auto;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Book Details -->
    <div class="section">
      <div class="section-title">Book Information</div>
      <div class="book-info">
        <img src="<%= book.coverImage %>" alt="Book Cover" class="book-cover">
        <div>
          <div><strong>Title:</strong> <%= book.title %></div>
          <div><strong>Authors:</strong> <%= book.authors.join(', ') %></div>
          <div><strong>ISBN:</strong> <%= checkout.bookIsbn %></div>
        </div>
      </div>
    </div>

    <!-- Checkout Information -->
    <div class="section">
      <div class="section-title">Checkout Details</div>
      <div class="info-grid">
        <div class="info-label">Checkout ID:</div>
        <div class="info-value"><%= checkout.id %></div>

        <div class="info-label">Checkout Date:</div>
        <div class="info-value"><%= new Date(checkout.checkoutDate).toLocaleDateString() %></div>

        <div class="info-label">Due Date:</div>
        <div class="info-value"><%= new Date(checkout.dueDate).toLocaleDateString() %></div>

        <div class="info-label">Return Date:</div>
        <div class="info-value">
          <% if (checkout.returnDate) { %>
            <%= new Date(checkout.returnDate).toLocaleDateString() %>
          <% } else { %>
            Not returned
          <% } %>
        </div>

        <div class="info-label">Status:</div>
        <div class="info-value"><%= checkout.status %></div>

        <div class="info-label">Renewal Count:</div>
        <div class="info-value"><%= checkout.renewalCount %></div>

        <div class="info-label">Fine:</div>
        <div class="info-value">$<%= checkout.fine %></div>

        <div class="info-label">Reservation ID:</div>
        <div class="info-value">
          <% if (checkout.reservationId) { %>
            <%= checkout.reservationId %>
          <% } else { %>
            â€“
          <% } %>
        </div>
      </div>
    </div>

    <!-- User Information -->
    <div class="section">
      <div class="section-title">User Information</div>
      <div class="user-info">
        <img src="<%= user.profilePicture || '/public/images/profile-pictures/default.jpg' %>" alt="User Profile" class="user-avatar">
        <div>
          <div><strong>Name:</strong> <%= user.name %></div>
          <div><strong>User ID:</strong> <%= checkout.userId %></div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
