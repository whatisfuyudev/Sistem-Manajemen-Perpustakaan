<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= book.title %> - Book Details</title>
  <style>
    /* Basic Reset */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      background-color: #f4f4f4;
      color: #333;
      padding: 20px;
    }
    .container {
      max-width: 800px;
      margin: 20px auto;
      background: #fff;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .book-header {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 20px;
      margin-bottom: 20px;
    }
    .book-cover {
      width: 200px;
      flex-shrink: 0;
    }
    .book-cover img {
      width: 100%;
      border-radius: 4px;
    }
    .book-info {
      flex: 1;
    }
    .book-info h1 {
      font-size: 2em;
      margin-bottom: 10px;
    }
    .book-info p {
      margin-bottom: 8px;
    }
    .book-details {
      margin-top: 20px;
    }
    .detail-item {
      margin-bottom: 10px;
    }
    .detail-item span {
      font-weight: bold;
    }
    .back-button {
      display: inline-block;
      margin-top: 20px;
      padding: 10px 20px;
      background: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-align: center;
      text-decoration: none;
      font-size: 16px;
    }
    .back-button:hover {
      background: #0056b3;
    }
    @media (max-width: 600px) {
      .book-header {
        flex-direction: column;
        align-items: center;
      }
      .book-cover { width: 150px; }
      .book-info h1 { font-size: 1.5em; }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Book Header: Cover and Title/Authors -->
    <div class="book-header">
      <div class="book-cover">
        <!-- Use coverImage from the book record; fallback to a default image if not present -->
        <img src="/public/images/book-covers/<%= book.coverImage ? book.coverImage : 'default-cover.jpg' %>" alt="Book Cover">
      </div>
      <div class="book-info">
        <h1><%= book.title %></h1>
        <p><strong>ISBN:</strong> <%= book.isbn %></p>
        <p><strong>Authors:</strong> <%= book.authors.join(', ') %></p>
        <% if (book.genres && book.genres.length) { %>
          <p><strong>Genres:</strong> <%= book.genres.join(', ') %></p>
        <% } %>
      </div>
    </div>

    <!-- Book Detailed Information -->
    <div class="book-details">
      <% if (book.publisher) { %>
        <div class="detail-item">
          <span>Publisher:</span> <%= book.publisher %>
        </div>
      <% } %>
      <% if (book.publicationYear) { %>
        <div class="detail-item">
          <span>Publication Year:</span> <%= book.publicationYear %>
        </div>
      <% } %>
      <% if (book.description) { %>
        <div class="detail-item">
          <span>Description:</span>
          <p><%= book.description %></p>
        </div>
      <% } %>
      <div class="detail-item">
        <span>Total Copies:</span> <%= book.totalCopies %>
      </div>
      <div class="detail-item">
        <span>Available Copies:</span> <%= book.availableCopies %>
      </div>
      <% if (book.formats && book.formats.length) { %>
        <div class="detail-item">
          <span>Formats:</span> <%= book.formats.join(', ') %>
        </div>
      <% } %>
      <% if (book.pages) { %>
        <div class="detail-item">
          <span>Pages:</span> <%= book.pages %>
        </div>
      <% } %>
    </div>
    
    <!-- Back Button -->
    <div style="text-align: center;">
      <a class="back-button" href="/">Back</a>
    </div>
  </div>
</body>
</html>
