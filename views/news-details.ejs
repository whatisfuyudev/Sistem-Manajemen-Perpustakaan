<!-- for front end -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= news.title %> | News</title>
  <style>
    /* Reset & base */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: #f5f5f5; color: #333; padding-bottom: 20px;}
    a { color: #007bff; text-decoration: none; }
    a:hover { text-decoration: underline; }

    /* Container */
    .container {
      max-width: 800px;
      margin: 0 auto;
      margin-top: 92px;
      background: #fff;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    /* Header / navigation */
    .site-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    .site-header .logo {
      font-size: 1.25rem;
      font-weight: bold;
      color: #007bff;
    }
    .site-header nav a {
      font-size: 0.9rem;
    }

    /* Breadcrumb (optional) */
    .breadcrumb {
      font-size: 0.9rem;
      margin-bottom: 15px;
    }
    .breadcrumb a { color: #555; }
    .breadcrumb span { color: #777; }

    /* Hero section */
    .hero-image img {
      width: 100%;
      max-height: 400px;
      object-fit: cover;
      border-radius: 4px;
      margin-bottom: 15px;
    }
    .news-title {
      font-size: 2rem;
      margin-bottom: 8px;
      text-align: center;
    }
    .published-date {
      font-size: 0.9rem;
      color: #666;
      text-align: center;
      margin-bottom: 20px;
    }

    /* Body content */
    .news-body {
      font-size: 1rem;
      margin-bottom: 20px;
      white-space: pre-wrap;
    }
    .updated-date {
      font-size: 0.85rem;
      color: #666;
      font-style: italic;
      text-align: right;
      margin-top: -10px;
      margin-bottom: 20px;
    }

    /* Footer actions */
    .news-actions {
      display: flex;
      justify-content: flex-start;
      gap: 15px;
      margin-bottom: 20px;
    }
    .news-actions .back-link {
      font-size: 0.95rem;
      padding: 8px 12px;
      background: #eee;
      border-radius: 4px;
    }

    /* Global footer */
    .site-footer {
      text-align: center;
      font-size: 0.85rem;
      color: #888;
      margin-top: 30px;
    }

    /* Responsive tweaks */
    @media (max-width: 600px) {
      .news-title { font-size: 1.5rem; }
      .container { padding: 15px; }
      .hero-image img { border-radius: 0; }
    }
  </style>
  <link rel="stylesheet" href="/public/css/topNavBarStyle.css">
</head>
<body>
  <!-- Navigation Bar -->
  <nav>
    <div class="logo">
      <a href="/">Library</a>
    </div>

    <div class="dropdown" id="navDropdown">
      <button class="dropbtn" id="menuBtn">â˜° Menu</button>
      <div class="dropdown-content" id="dropdownContent">
        <a href="/">Home</a>
        <a href="/profile">Profile</a>
        <a href="/user/reservations">Reservations</a>
        <a href="/user/checkouts">Checkouts</a>
        <a href="/auth/login">Login</a>
        <a href="/auth/register">Register</a>
      </div>
    </div>
  </nav>

  <main class="container">
    <!-- Hero Section -->
    <% if (news.imageUrl) { %>
      <div class="hero-image">
        <img src="<%= news.imageUrl %>" alt="<%= news.title %>">
      </div>
    <% } %>
    <h1 class="news-title"><%= news.title %></h1>
    <p class="published-date">
      Published <%= news.createdAt.toLocaleDateString('en-US', { year:'numeric', month:'long', day:'numeric' }) %>
    </p>

    <!-- Body Content -->
    <article class="news-body">
      <%= news.body %>
    </article>
    <% if (news.updatedAt > news.createdAt) { %>
      <p class="updated-date">
        Last updated <%= news.updatedAt.toLocaleDateString('en-US', { year:'numeric', month:'long', day:'numeric' }) %>
      </p>
    <% } %>


  </main>

  <script src="/public/js/topNavBarScript.js"></script>
</body>
</html>
