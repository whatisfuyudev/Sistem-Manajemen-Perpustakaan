<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add New News</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/public/css/admin-add-common.css">
  <style>
    /* Save/Cancel buttons */
    #saveBtn {
      background: #28a745;
      color: #fff;
    }
    #cancelBtn {
      background: #dc3545;
      color: #fff;
    }

    /* Message text */
    #message {
      margin-top: 15px;
      text-align: center;
    }

    /* Image preview */
    #previewImage {
      display: block;
      max-width: 100%;
      margin-top: 8px;
      border-radius: 4px;
    }
  </style>
  <link rel="stylesheet" href="/public/css/loadingPopupStyle.css">
</head>
<body>
  <div class="container">
    <div class="back-button-container">
      <a href="/admin/panel?tab=news" class="back-button">Back</a>
    </div>

    <h1>Add New News</h1>

    <!-- Image upload -->
    <div class="form-group">
      <label for="uploadedImage">News Image</label>
      <input type="file" id="uploadedImage" name="uploadedImage" accept="image/*">
      <img id="previewImage" src="" alt="Preview" style="display:none;">
    </div>

    <form id="addNewsForm" enctype="multipart/form-data">
      <!-- Title -->
      <div class="form-group">
        <label for="title">Title *</label>
        <input type="text" id="title" name="title" maxlength="75" required>
      </div>

      <!-- Body -->
      <div class="form-group">
        <label for="body">Body / Announcement Text *</label>
        <textarea id="body" name="body" rows="6" required></textarea>
      </div>

      <!-- Published flag -->
      <div class="form-group">
        <label for="published">Published?</label>
        <select id="published" name="published">
          <option value="false" selected>No</option>
          <option value="true">Yes</option>
        </select>
      </div>

      <!-- Hidden field for the uploaded image URL/path -->
      <input type="hidden" id="imageUrlInput" name="imageUrl">

      <div class="buttons">
        <button type="button" id="cancelBtn">Cancel</button>
        <button type="button" id="saveBtn">Save</button>
      </div>

      <div id="message"></div>
    </form>
  </div>

  <!-- Loading Modal (no buttons) -->
  <div id="loading-overlay" class="modal-overlay hidden">
    <div class="modal">
      <div class="spinner"></div>
      <p id="loading-message" style="font-size:0.95rem; color:#333; margin:0;">
        Loading…
      </p>
    </div>
  </div>

  <script src="/public/js/loadingPopup.js"></script>
  <!-- your client‐side script to handle preview+upload -->
  <script src="/public/js/admin-news-addScript.js"></script>
</body>
</html>
