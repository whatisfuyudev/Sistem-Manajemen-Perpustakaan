<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add New Book</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/public/css/admin-add-common.css">
  <style>
    /* Override shared container max-width */
    .container {
      max-width: 1000px;
    }

    /* Title size (shared h1 only centered + margin; here we add font-size) */
    h1 {
      font-size: 2em;
    }

    /* Inputs get slightly more padding & explicit font-size */
    input[type="text"],
    input[type="number"],
    textarea {
      padding: 10px;       /* shared uses 8px */
      font-size: 1rem;     /* shared sets 1rem on buttons, not on inputs */
    }

    /* Button-group is unique to Book Add (shared file uses `.buttons`) */
    .button-group {
      display: flex;
      justify-content: space-between;
      margin-top: 20px;
    }
    .button-group button {
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 1rem;
    }

    /* Save / Cancel buttons have unique hover colors */
    #saveButton {
      background-color: #28a745;
      color: #fff;
    }
    #saveButton:hover {
      background-color: #218838;
    }
    #cancelButton {
      background-color: #dc3545;
      color: #fff;
    }
    #cancelButton:hover {
      background-color: #c82333;
    }

    /* Modal Popup entirely unique to Book Add */
    .modal-overlay {
      position: fixed;
      top: 0; left: 0; width: 100%; height: 100%;
      background: rgba(0,0,0,0.5);
      display: flex; justify-content: center; align-items: center;
      z-index: 1000; padding: 20px;
    }
    .hidden {
      display: none;
    }
    .modal {
      background: #fff;
      border-radius: 4px;
      max-width: 400px;
      width: 100%;
      padding: 20px;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    #modal-message {
      font-size: 16px;
      margin-bottom: 20px;
    }
    .modal-buttons {
      margin-top: 16px;
      display: flex;
      justify-content: center;
      gap: 10px;
    }
    .modal-buttons button {
      padding: 10px 20px;
      font-size: 14px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background 0.2s ease;
    }
    #modal-ok {
      background: #28a745;
      color: #fff;
    }
    #modal-cancel {
      background: #dc3545;
      color: #fff;
    }

    /* Mobile-only override for Book Add cover image */
    @media (max-width: 600px) {
      .cover-image img {
        max-width: 80%;
      }
    }

  </style>
</head>
<body>
  <div class="container">
    <div class="back-button-container">
      <!-- change to proper endpoint -->
      <a href="/admin/panel" class="back-button">Back</a>
    </div>

    <h1>Add New Book</h1>
    
    <!-- Form for Adding New Book Data -->
     <!-- Cover Image Section -->
     <div class="form-group">
      <label for="uploadedImage">Cover Image</label>
      <input type="file" id="uploadedImage" name="uploadedImage" accept="image/*">
    </div>
    <form id="addBookForm">
      <!-- Book Data Fields -->
      <div class="form-group">
        <label for="isbn">ISBN</label>
        <input type="text" id="isbn" name="isbn" placeholder="Enter ISBN" required>
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="Enter book title" required>
      </div>
      <div class="form-group">
        <label for="authors">Authors (comma separated)</label>
        <input type="text" id="authors" name="authors" placeholder="Enter authors" required>
      </div>
      <div class="form-group">
        <label for="genres">Genres (comma separated)</label>
        <input type="text" id="genres" name="genres" placeholder="Enter genres">
      </div>
      <div class="form-group">
        <label for="publisher">Publisher</label>
        <input type="text" id="publisher" name="publisher" placeholder="Enter publisher">
      </div>
      <div class="form-group">
        <label for="publicationYear">Publication Year</label>
        <input type="number" id="publicationYear" name="publicationYear" placeholder="Enter publication year">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" placeholder="Enter book description"></textarea>
      </div>
      <div class="form-group">
        <label for="totalCopies">Total Copies</label>
        <input type="number" id="totalCopies" name="totalCopies" placeholder="Enter total copies" required>
      </div>
      <!-- New Form Group for Pages -->
      <div class="form-group">
        <label for="pages">Pages</label>
        <input type="number" id="pages" name="pages" placeholder="Enter number of pages">
      </div>
      <!-- New Form Group for Formats -->
      <div class="form-group">
        <label for="formats">Formats (comma separated)</label>
        <input type="text" id="formats" name="formats" placeholder="Enter formats (e.g., softcover, hardcover)">
      </div>
      <!-- Hidden field for coverImage path (set after upload) -->
      <input type="hidden" id="coverImageInput" name="coverImage">
      <!-- Buttons: Save and Cancel -->
      <div class="button-group">
        <button type="button" id="cancelButton">Cancel</button>
        <button type="button" id="saveButton">Save</button>
      </div>
    </form>
  </div>

  <!-- Modal Popup -->
  <div id="modal-overlay" class="modal-overlay hidden">
    <div class="modal">
      <p id="modal-message"></p>
      <div class="modal-buttons">
        <button id="modal-ok">OK</button>
        <button id="modal-cancel" class="hidden">Cancel</button>
      </div>
    </div>
  </div>

  <script src="/public/js/admin-book-addScript.js">
    
  </script>
</body>
</html>
